<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TicketApp.ViewModels"
             xmlns:models="clr-namespace:TicketApp.Models"
             x:Class="TicketApp.Views.MainPage"
             x:DataType="vm:MainPageVm"
             Title="My Events"
             BackgroundColor="#F0F0F0">

    <Grid RowDefinitions="*, Auto" Padding="15" RowSpacing="10">

        <CollectionView Grid.Row="0" 
                        ItemsSource="{Binding Events}"
                        SelectionMode="Single">
            
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                    <Label Text="📭" FontSize="50" HorizontalOptions="Center"/>
                    <Label Text="No events created yet." 
                           TextColor="Gray"
                           FontSize="18"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Event">
                    <Frame Margin="0,0,0,10" 
                           Padding="15" 
                           CornerRadius="12" 
                           HasShadow="True" 
                           BackgroundColor="White"
                           BorderColor="Transparent">
                        
                        <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                            <Label Grid.Row="0" Grid.Column="0" 
                                   Text="{Binding Name}" 
                                   FontSize="18" 
                                   FontAttributes="Bold" 
                                   TextColor="#333333"/>

                            <Label Grid.Row="0" Grid.Column="1" 
                                   Text="{Binding Date, StringFormat='{0:dd.MM.yyyy}'}" 
                                   TextColor="#666666" 
                                   FontSize="14"
                                   HorizontalOptions="End"/>

                            <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5,0,0">
                                <Label Text="📍 " FontSize="12"/>
                                <Label Text="{Binding Location}" 
                                       FontSize="13" 
                                       TextColor="#888888"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="1" 
                Text="+ Create new event"
                Command="{Binding NavigateToAddEventPageCommand}"
                BackgroundColor="#1edce3"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="25"
                HeightRequest="50"
                Margin="0,5,0,5"
                Shadow="{Shadow Brush=Black, Offset='2,2', Opacity=0.3}"/>
    </Grid>

</ContentPage>
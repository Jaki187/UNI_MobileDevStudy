<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TicketApp.ViewModels"
             x:Class="TicketApp.Views.AddEventPage"
             x:DataType="vm:AddEventPageVm"
             Title="New Event"
             BackgroundColor="#F0F0F0">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Label Text="Event Details" 
                   FontSize="14" 
                   TextColor="Gray" 
                   FontAttributes="Bold" />

            <Frame Padding="0" CornerRadius="10" BorderColor="Transparent" HasShadow="False">
                <Entry Placeholder="Event Name" 
                       Text="{Binding Name}" 
                       BackgroundColor="White" 
                       TextColor="Black"
                       HeightRequest="50"/>
            </Frame>

            <Frame Padding="0" CornerRadius="10" BorderColor="Transparent" HasShadow="False">
                <Entry Placeholder="Location" 
                       Text="{Binding Location}" 
                       BackgroundColor="White" 
                       TextColor="Black"
                       HeightRequest="50"/>
            </Frame>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Frame Grid.Column="0" Padding="0" CornerRadius="10" BorderColor="Transparent" HasShadow="False">
                    <DatePicker Date="{Binding EventDate}" 
                                BackgroundColor="White" 
                                TextColor="Black"
                                HeightRequest="50"/>
                </Frame>
                <Frame Grid.Column="1" Padding="0" CornerRadius="10" BorderColor="Transparent" HasShadow="False">
                    <TimePicker Time="{Binding EventTime}" 
                                BackgroundColor="White" 
                                TextColor="Black"
                                HeightRequest="50"/>
                </Frame>
            </Grid>

            <Label Text="Description" 
                   FontSize="14" 
                   TextColor="Gray" 
                   FontAttributes="Bold" 
                   Margin="0,10,0,0"/>
            
            <Frame Padding="0" CornerRadius="10" BorderColor="Transparent" HasShadow="False" HeightRequest="120">
                <Editor Placeholder="more information..." 
                        Text="{Binding Description}" 
                        BackgroundColor="White"
                        TextColor="Black"
                        AutoSize="TextChanges"/>
            </Frame>

            <Button Text="Save Event" 
                    Command="{Binding SaveEventCommand}" 
                    BackgroundColor="#1edce3" 
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="50"
                    Margin="0,20,0,0"
                    Shadow="{Shadow Brush=Black, Offset='2,2', Opacity=0.2}"/>

            <Button Text="Cancel" 
                    Command="{Binding CancelCommand}" 
                    BackgroundColor="Transparent" 
                    TextColor="Gray"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
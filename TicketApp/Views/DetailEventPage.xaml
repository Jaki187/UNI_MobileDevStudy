<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TicketApp.ViewModels"
             xmlns:models="clr-namespace:TicketApp.Models"
             x:Class="TicketApp.Views.DetailEventPage"
             x:DataType="vm:DetailEventPageVm"
             Title="Event Details"
             BackgroundColor="WhiteSmoke">

    <Grid RowDefinitions="Auto, Auto, *, Auto" RowSpacing="0">

        <VerticalStackLayout Grid.Row="0" 
                             BackgroundColor="White" 
                             Padding="20,20,20,30" 
                             Spacing="10">
            
            <Label Text="{Binding Event.Name}" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="#1a1a1a"/>
            
            <Label Text="{Binding Event.Description}" 
                   FontSize="14" 
                   TextColor="#666"/>

            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="15" RowDefinitions="Auto, Auto" Margin="0,10,0,0">
                <Label Grid.Row="0" Grid.Column="0" Text="ðŸ“…" FontSize="16"/>
                <Label Grid.Row="0" Grid.Column="1" 
                       Text="{Binding Event.Date, StringFormat='{0:ddd, dd. MMMM yyyy, HH:mm}'}" 
                       TextColor="#444" 
                       FontAttributes="Bold"/>

                <Label Grid.Row="1" Grid.Column="0" Text="ðŸ“" FontSize="16" Margin="0,5,0,0"/>
                <Label Grid.Row="1" Grid.Column="1" 
                       Text="{Binding Event.Location}" 
                       TextColor="#444" 
                       Margin="0,5,0,0"/>
            </Grid>
        </VerticalStackLayout>

        <Label Grid.Row="1" 
               Text="Participants" 
               FontSize="18" 
               FontAttributes="Bold" 
               TextColor="#333" 
               Margin="20,20,20,10"/>

        <CollectionView Grid.Row="2" 
                        ItemsSource="{Binding Tickets}" 
                        SelectionMode="None"
                        Margin="10,0">
            
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                    <Label Text="ðŸŽŸï¸" FontSize="40" HorizontalOptions="Center"/>
                    <Label Text="No tickets sold yet." TextColor="Gray" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Ticket">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Delete" 
                                           BackgroundColor="#FF3B30" 
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type vm:DetailEventPageVm}}, Path=DeleteTicketCommand}"
                                           CommandParameter="{Binding .}"/>
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Border StrokeShape="RoundRectangle 10"
                                StrokeThickness="0"
                                BackgroundColor="White"
                                Margin="0,0,0,10"
                                Padding="15">
                            
                            <Grid ColumnDefinitions="*, Auto">
                                <VerticalStackLayout Grid.Column="0" Spacing="2">
                                    <Label Text="{Binding GuestName}" 
                                           FontSize="16" 
                                           FontAttributes="Bold" 
                                           TextColor="#333"/>
                                    <Label Text="{Binding SecretCode}" 
                                           FontSize="12" 
                                           FontFamily="Monospace"
                                           TextColor="#888"/>
                                </VerticalStackLayout>
                                
                                <Label Grid.Column="1" 
                                       Text="{Binding IsUsed, StringFormat='Used: {0}'}" 
                                       TextColor="Gray"
                                       FontSize="12"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Border>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid Grid.Row="3" ColumnDefinitions="*,*" Padding="15" ColumnSpacing="15" BackgroundColor="#F0F0F0">
            
            <Button Grid.Column="0"
                    Text="ðŸ“· Scan"
                    Command="{Binding OpenScannerCommand}"
                    BackgroundColor="#333"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"/>

            <Button Grid.Column="1"
                    Text="+ Add Guest" 
                    Command="{Binding AddGuestCommand}"
                    BackgroundColor="#1edce3" 
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"/>
        </Grid>
        
    </Grid>
</ContentPage>